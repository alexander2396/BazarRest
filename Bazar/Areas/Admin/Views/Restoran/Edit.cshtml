@model Bazar.Models.Entities.Restoran

@{
    ViewBag.Title = "Ресторан";
}

<div class="headers">
    <h1>@ViewBag.Title</h1>
</div>

@if (TempData["message"] != null)
{
    <div class="alert @TempData["alertType"]" role="alert">
        @TempData["message"]
    </div>
}

@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <div class="alert alert-danger" role="alert">
            @error.ErrorMessage
        </div>
    }
}

<div class="row">
    <form asp-action="Edit" method="post" class="form-container" data-type="type">

        <div class="row">
            <div class="col-xl-6 col-lg-12">

                <div class="form-group">
                    <label asp-for="Title"></label>
                    <div><span asp-validation-for="Title" class="text-danger"></span></div>
                    <input asp-for="Title" class="form-control input-counter" />
                </div>

                <div class="form-group">
                    <label asp-for="ContentTitle"></label>
                    <div><span asp-validation-for="ContentTitle" class="text-danger"></span></div>
                    <input asp-for="ContentTitle" class="form-control input-counter" />
                </div>

                <div class="form-group">
                    <label asp-for="BtnTitle"></label>
                    <div><span asp-validation-for="BtnTitle" class="text-danger"></span></div>
                    <input asp-for="BtnTitle" class="form-control input-counter" />
                </div>

                <div class="form-group">
                    <label asp-for="Url"></label>
                    <div><span asp-validation-for="Url" class="text-danger"></span></div>
                    <input asp-for="Url" class="form-control input-counter" />
                </div>

            </div>

            <div class="col-xl-6 col-lg-12">

                <div class="form-group">
                    <label asp-for="Content"></label>
                    <div><span asp-validation-for="Content" class="text-danger"></span></div>
                    <textarea asp-for="Content" class="form-control input-counter" rows="20"></textarea>
                </div>

            </div>

        </div>

        <div class="text-center col-12">
            <button class="btn btn-primary" type="submit">Сохранить</button>
        </div>
    </form>
</div>