@model IEnumerable<Bazar.Models.Entities.Order>

@{
    ViewBag.Title = "Заказы";
}

<div class="headers">
    <h1>@ViewBag.Title</h1>
</div>


@if (TempData["message"] != null)
{
    <div class="alert @TempData["alertType"]" role="alert">
        @TempData["message"]
    </div>
}

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th>Имя</th>
            <th>E-mail</th>
            <th>Номер</th>
            <th>Тема</th>
            <th>Сообщение</th>
            <th>Дата</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Theme</td>
                    <td>@item.Message</td>
                    <td>@item.Date</td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@item.OrderId" />
                            <button type="submit" class="btn btn-danger btn-sm delete-button">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">Нет записей</td>
            </tr>
        }
    </tbody>

</table>

@Html.Partial("_ConfirmDeleteModalPartial", "Заказ будет удален")